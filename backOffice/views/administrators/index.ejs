<!--
          Área de Pesquisa e Botão de adicionar
      -->
<div class="d-flex justify-content-end">
  <!-- Não tem pesquisas -->
  <a
    class="btn btn-success"
    data-toggle="modal"
    data-target="#inserir"
    style="background-color: #4caf50; border: none"
    href="/administrators/create"
    >Adicionar</a
  >
</div>

<!--
            Fim da Área de Pesquisa e botão de adicionar
        -->

<!--
          Tabela da base de dados
      -->
<div class="table-responsive-sm">
  <% if(administrators.length> 0) { %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Telemóvel</th>
        <th scope="col">País</th>
        <th scope="col">Morada</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% for(var i=0; i< administrators.length;i++) { %>
      <tr>
        <th scope="row"></th>
        <td><%= administrators[i].name %></td>
        <td><%= administrators[i].email %></td>
        <td><%= administrators[i].phoneNumber %></td>
        <td><%= administrators[i].country %></td>
        <td><%= administrators[i].address %></td>
        <td>
          <form
            action="/administrators/delete/<%= administrators[i]._id %>"
            method="GET"
          >
            <button
              onclick="return confirmar();"
              data-method="delete" href="/administrators/<%= administrators[i]._id %>" rel="nofollow"
              style="border: none; background-color: transparent"
            >
              <i class="material-icons green">delete</i>
            </button>
          </form>
        </td>
        <td>
          <form
            action="/administrators/edit/<%= administrators[i]._id %>"
            method="get"
          >
            <button
              type="submit"
              style="border: none; background-color: transparent"
            >
              <i class="material-icons green">mode_edit</i>
            </button>
          </form>
        </td>
      </tr>

      <% } %>
    </tbody>

    <% } else { %>
    <div>Não foi encontrado nenhum administrador.</div>
    <% } %>

  </table>
</div>
<!--
          Fim da Tabela da base de dados
      -->